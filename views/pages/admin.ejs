<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="container">
        <%- include('../partials/header.ejs') %>

            <main>
                <H1>Admin Painel</H1>
                <div class="mt-3 mb-3">
                    <h3>Category</h3>
                    <div class="row">
                        <div class="col">
                            <a href="/admin/category/add" class="btn btn-primary">Cadaster</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Description</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categories.forEach(function(category){ %>
                                        <tr>
                                            <th scope="row"><%= category.id%></th>
                                            <td><%= category.name%></td>
                                            <td><%= category.description%></td>
                                            <td><a href="/admin/category/edit/<%= category.id%>" class="btn btn-primary">Edit</a></td>
                                            <td><a href="/admin/category/remove/<%= category.id%>" class="btn btn-primary">Remove</a></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <h3>Posts</h3>
                    <div class="row">
                        <div class="col">
                            <a href="/admin/posts/add" class="btn btn-primary">Cadaster</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% posts.forEach(function(post){ %>
                                        <tr>
                                            <th scope="row"><%= post.id%></th>
                                            <td><%= post.title%></td>
                                            <td><%= post.CategoryId%></td>
                                            <td><%= post.createdAt%></td>
                                            <td><a href="/admin/posts/edit/<%= post.id%>" class="btn btn-primary">Edit</a></td>
                                            <td><a href="/admin/posts/remove/<%= post.id%>" class="btn btn-primary">Remove</a></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="mt-3 mb-3">
                    <h3>Users</h3>
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Username</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Cellphone</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user){ %>
                                        <tr>
                                            <th scope="row"><%= user.id%></th>
                                            <td><%= user.username%></td>
                                            <td><%= user.email%></td>
                                            <td><%= user.cellphone%></td>
                                            <td><a href="/admin/users/edit" class="btn btn-primary">Edit</a></td>
                                            <td><a href="/admin/users/remove" class="btn btn-primary">Remove</a></td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </main>

            <%- include('../partials/footer') %>
    </div>
    <%- include('../partials/scripts.ejs') %>
</body>

</html>